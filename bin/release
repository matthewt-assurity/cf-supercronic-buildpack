#!/usr/bin/env bash

echo "running release"

# bin/release <build-dir>
set -e

BUILD_DIR=$(cd "$1/" && pwd)
BUILDPACK_DIR=$(dirname $(readlink -f ${BASH_SOURCE%/*}))

cp "${BUILDPACK_DIR}/supercronic" "${BUILD_DIR}/supercronic"
chmod +x "${BUILD_DIR}/supercronic"

cat <<EOF
---
default_process_types:
  web: /home/vcap/app/supercronic
EOF